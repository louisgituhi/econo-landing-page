---
import { Image } from "astro:assets"
import airbnb from "../images/airbnb.svg"
import apple from "../images/apple.svg"
import disney from "../images/disney.svg"
import fb from "../images/facebook.svg"
import quora from "../images/quora.svg"
import samsung from "../images/samsung.svg"
import saas from "../images/sass.svg"
import spark from "../images/spark.svg"
---
<section class=" relative antialiased">
    <h2 class=" text-center text-white mt-8">Trusted By</h2>
    <main class="relative flex flex-col justify-center overflow-hidden">
        <div class="w-full mx-auto px-4 md:px-6 py-24">
            <div class="text-center">

                <!-- Logo Carousel animation -->
                <div
                    x-data="{}"
                    x-init="$nextTick(() => {
                        let ul = $refs.logos;
                        ul.insertAdjacentHTML('afterend', ul.outerHTML);
                        ul.nextSibling.setAttribute('aria-hidden', 'true');
                    })"
                    class="w-full inline-flex flex-nowrap overflow-hidden [mask-image:_linear-gradient(to_right,transparent_0,_black_128px,_black_calc(100%-128px),transparent_100%)]">
                    <ul x-ref="logos" class="flex items-center justify-center md:justify-start [&_li]:mx-8 [&_img]:max-w-none animate-infinite-scroll">
                        <li>
                            <Image src={fb} alt="facebook" />
                        </li>
                        <li>
                            <Image src={disney} alt="facebook" />
                        </li>
                        <li>
                            <Image src={airbnb} alt="facebook" />
                        </li>
                        <li>
                            <Image src={apple} alt="facebook" />
                        </li>
                        <li>
                            <Image src={spark} alt="facebook" />
                        </li>
                        <li>
                            <Image src={samsung} alt="facebook" />
                        </li>
                        <li>
                            <Image src={quora} alt="facebook" />
                        </li>
                        <li>
                            <Image src={saas} alt="facebook" />
                        </li>
                    </ul>                
                </div>
            </div>
    </main>
</section>